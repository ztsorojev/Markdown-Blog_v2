<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="initial-scale=1, minimum-scale=1, width=device-width" name="viewport">
    <title>Blog Posts</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>
  <body>

    <div class="container-fluid text-center p-0">

        <div class="header-img">
        </div>

        <div class="profil-img">
            <img src="https://cdn.cybrhome.com/static/desktop/search/images/placeholders/male.png" width="150" height="150">
            <h3><%= username %>'s Blog</h3>
        </div>

        <div class="container blog-wrapper">

            <div class="container pt-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Body</th>
                            <th scope="col">Created / Modified</th>
                        </tr>
                    </thead>

                    <tbody>
                      <% 
                        var i =0;
                        for(var post of posts) {
                            i++;
                      %>

                        <tr>
                            <form action="post" method="POST"> 
                                <input type="hidden" name="username" value= <%= username %> >
                                <input type="hidden" name="postid" value= <%= post.postid %> >
                                <th scope="row"> <%= i %> </th>
                                <td> <a href="/blog/<%= username %>/<%= post.postid %>"> <%- post.title %> </a>  </td>
                                <td class="body-borders"> <%- post.body %>  </td>
                                <td> <%= post.created %> / <%= post.modified %> </td>
                            </form>
                        </tr>
                    <% } %>
                    </tbody>

                </table>

                <% if (nextPageUrl) { %>
                    <div class="nextBtn"><a id="next" href=<%= nextPageUrl %>>Next <i class="fa fa-angle-right"></i></a></div>
                <% } %>

            </div>


        </div>
        
    </div>


    
  </body>
</html>